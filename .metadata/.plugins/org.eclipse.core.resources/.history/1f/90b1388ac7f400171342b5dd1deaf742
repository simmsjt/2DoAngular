 angular.module('appModule')
.component('backlog', {
  templateUrl : 'backlog.component.html',
  controller : function() {
    var vm =this;

    vm.criticalityLevel = 7;

    vm.checkNuclearCriticality = function() {
      if (vm.criticalityLevel > 10) return 'danger';
      if (vm.criticalityLevel > 5) return 'warning';
      return 'safe';
    }
  },
  controllerAs: 'vm'
})