	@Override
	public Set<Todo> index(int uid) {
		String query = "SELECT t FROM Todo t WHERE t.User.id = uid";
		Set<Todo> todos = (Set<Todo>) em.createQuery(query, Todo.class).getResultList();
		
		return todo;
	}

